<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Survey</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Survey.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white  mb-3">
            <div class="container-fluid">

                <!-- Brand on the LEFT -->
                <a class="navbar-brand  @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active text-primary" : "text-dark")"
                   asp-area="" asp-controller="Home" asp-action="Index">
                    _Survey
                </a>

                <!-- Toggle Button for Mobile -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Menu on the RIGHT -->
                <div class="collapse navbar-collapse justify-content-end" id="navbarContent">
                    <ul class="navbar-nav pe-5">
                        @*  <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Survey" asp-action="Create">Fill Out Survey</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Survey" asp-action="Summary">View Survey Results</a>
                        </li> *@
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Create" ? "active text-primary" : "text-dark")"
                               asp-area="" asp-controller="Survey" asp-action="Create">
                                FILL OUT SURVEY
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Summary" ? "active text-primary" : "text-dark")"
                               asp-area="" asp-controller="Survey" asp-action="Summary">
                                VIEW SURVEY RESULTS
                            </a>
                        </li>

                    </ul>
                </div>

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container text-center">
            &copy; 2025 - Survey 
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
